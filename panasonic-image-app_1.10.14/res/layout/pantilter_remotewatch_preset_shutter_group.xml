<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:gravity="center" android:orientation="horizontal" android:duplicateParentState="true" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="fill_parent">
        <RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent">
            <ImageButton android:layout_gravity="center" android:id="@id/remoteVoiceButton" android:background="#00000000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/liveview_movie_remotevoice_button" android:scaleType="fitCenter" android:layout_alignParentLeft="true" android:onClick="OnClickRemoteVoice" />
            <ImageButton android:id="@id/recButton" android:background="#00000000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/liveview_movie_rec_button" android:scaleType="fitCenter" android:layout_centerHorizontal="true" android:layout_centerVertical="true" android:onClick="onClickPresetRec" />
            <ImageButton android:id="@id/shutterButton" android:background="#00000000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/liveview_movie_shutter_button" android:scaleType="fitCenter" android:layout_alignParentRight="true" android:onClick="onClickPresetShutter" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>