<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <ImageButton android:layout_gravity="center_vertical" android:id="@id/playSelectFolderButton" android:background="#00000000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/browse_smartphone_button" android:scaleType="fitCenter" android:onClick="OnClickSelectFolder" />
        <ImageButton android:layout_gravity="center_vertical" android:id="@id/playSelectFormatButton" android:background="#00000000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:scaleType="fitCenter" android:onClick="OnClickSelectFormat" />
        <FrameLayout android:layout_gravity="center_vertical" android:layout_width="0.0dip" android:layout_height="wrap_content" android:layout_weight="1.0">
            <TextView android:gravity="center" android:id="@id/mainPlaySelectFolderTitle" android:visibility="invisible" android:layout_width="fill_parent" android:layout_height="wrap_content" android:maxLines="1" />
            <TextView android:gravity="center" android:id="@id/mainPlaySelectFolderFileTotal" android:layout_width="fill_parent" android:layout_height="wrap_content" android:maxLines="1" />
        </FrameLayout>
        <FrameLayout android:layout_gravity="center_vertical" android:id="@id/playPicmateGroup" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <ImageButton android:id="@id/playPicmateSendButton" android:background="#00000000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/smartoperation_picmatesend_button" android:scaleType="fitCenter" android:onClick="OnClickPicmateUnsentImageList" />
            <TextView android:textSize="10.0sp" android:textColor="@android:color/white" android:gravity="right" android:layout_gravity="center|right" android:id="@id/playPicmateOverlayNum" android:background="#00000000" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_marginRight="8.0dip" />
        </FrameLayout>
        <LinearLayout android:layout_gravity="center_vertical" android:orientation="horizontal" android:id="@id/playOption" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <ImageButton android:id="@id/playOptionListButton" android:background="#00000000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/smartoperation_optionlist_button" android:scaleType="fitCenter" android:onClick="OnClickOptionList" />
            <ImageButton android:id="@id/playMultiSelectCancelButton" android:background="#00000000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/smartoperation_allcancel_button" android:scaleType="fitCenter" android:onClick="OnClickAllCancel" />
        </LinearLayout>
        <FrameLayout android:layout_gravity="center_vertical" android:id="@id/playMultiSelectButtonFrame" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <Button android:textSize="@dimen/live_view_lumix_select_font_size" android:textColor="#ffffffff" android:id="@id/playMultiSelectButtonString" android:background="@drawable/smartoperation_black_button" android:layout_width="fill_parent" android:layout_height="fill_parent" android:scaleType="fitCenter" android:text="@string/ply_btn_select" />
        </FrameLayout>
    </LinearLayout>
    <RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent">
        <TextView android:ellipsize="marquee" android:id="@id/playSelectFolderName" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1" android:layout_alignParentLeft="true" android:layout_centerVertical="true" />
    </RelativeLayout>
</LinearLayout>