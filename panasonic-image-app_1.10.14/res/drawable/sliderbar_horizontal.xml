<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="@dimen/sliderbar_baseCornersRadius" />
            <gradient android:startColor="@color/sliderbar_background_start" android:endColor="@color/sliderbar_background_end" android:angle="270.0" android:centerX="0.75" android:centerColor="@color/sliderbar_background_center" />
            <stroke android:width="1.0dip" android:color="@color/sliderbar_background_edge" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip android:gravity="left" android:clipOrientation="horizontal">
            <shape>
                <corners android:radius="@dimen/sliderbar_baseCornersRadius" />
                <solid android:color="@android:color/transparent" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip android:gravity="left" android:clipOrientation="horizontal">
            <shape>
                <corners android:radius="@dimen/sliderbar_baseCornersRadius" />
                <solid android:color="@android:color/transparent" />
            </shape>
        </clip>
    </item>
</layer-list>