<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ActivityStyle" parent="@android:style/Theme.Black">
        <item name="android:windowNoTitle">true</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowEnableSplitTouch">false</item>
    </style>
    <style name="ActivityStyleForOreo" parent="@android:style/Theme.Black">
        <item name="android:windowNoTitle">true</item>
        <item name="android:itemBackground">@android:color/background_light</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowEnableSplitTouch">false</item>
    </style>
    <style name="Animation" parent="@android:style/Animation" />
    <style name="Animation.Activity" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_open_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_open_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_close_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_close_exit</item>
    </style>
    <style name="Animations" />
    <style name="Animations.PopDownMenu" parent="@style/Animations" />
    <style name="Animations.PopDownMenu.Center" parent="@style/Animations.PopDownMenu">
        <item name="android:windowEnterAnimation">@anim/grow_from_top</item>
        <item name="android:windowExitAnimation">@anim/shrink_from_bottom</item>
    </style>
    <style name="Animations.PopDownMenu.Left" parent="@style/Animations.PopDownMenu">
        <item name="android:windowEnterAnimation">@anim/grow_from_topleft_to_bottomright</item>
        <item name="android:windowExitAnimation">@anim/shrink_from_bottomright_to_topleft</item>
    </style>
    <style name="Animations.PopDownMenu.Reflect" parent="@style/Animations.PopDownMenu">
        <item name="android:windowEnterAnimation">@anim/pump_top</item>
        <item name="android:windowExitAnimation">@anim/disappear</item>
    </style>
    <style name="Animations.PopDownMenu.Right" parent="@style/Animations.PopDownMenu">
        <item name="android:windowEnterAnimation">@anim/grow_from_topright_to_bottomleft</item>
        <item name="android:windowExitAnimation">@anim/shrink_from_bottomleft_to_topright</item>
    </style>
    <style name="Animations.PopUpMenu" parent="@style/Animations" />
    <style name="Animations.PopUpMenu.Center" parent="@style/Animations.PopUpMenu">
        <item name="android:windowEnterAnimation">@anim/grow_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/shrink_from_top</item>
    </style>
    <style name="Animations.PopUpMenu.Left" parent="@style/Animations.PopUpMenu">
        <item name="android:windowEnterAnimation">@anim/grow_from_bottomleft_to_topright</item>
        <item name="android:windowExitAnimation">@anim/shrink_from_topright_to_bottomleft</item>
    </style>
    <style name="Animations.PopUpMenu.Reflect" parent="@style/Animations.PopUpMenu">
        <item name="android:windowEnterAnimation">@anim/pump_bottom</item>
        <item name="android:windowExitAnimation">@anim/disappear</item>
    </style>
    <style name="Animations.PopUpMenu.Right" parent="@style/Animations.PopUpMenu">
        <item name="android:windowEnterAnimation">@anim/grow_from_bottomright_to_topleft</item>
        <item name="android:windowExitAnimation">@anim/shrink_from_topleft_to_bottomright</item>
    </style>
    <style name="AppTheme" parent="@android:style/Theme.Black.NoTitleBar" />
    <style name="AppThemeForOreo" parent="@android:style/Theme.Black.NoTitleBar">
        <item name="android:itemBackground">@android:color/background_light</item>
    </style>
    <style name="FullscreenLeftButtonStyle">
        <item name="android:background">#00000000</item>
        <item name="android:visibility">visible</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/fullscreen_button_size</item>
        <item name="android:layout_marginTop">@dimen/fullscreen_left_buttons_interval</item>
        <item name="android:src">@drawable/no_label_button</item>
        <item name="android:scaleType">fitCenter</item>
    </style>
    <style name="GuidanceMenuIconLayoutStyle">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="GuidanceMenuIconStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:background">#00000000</item>
        <item name="android:padding">4.0dip</item>
        <item name="android:layout_width">64.0dip</item>
        <item name="android:layout_height">64.0dip</item>
        <item name="android:scaleType">centerInside</item>
    </style>
    <style name="GuidanceMenuIconTextStyle">
        <item name="android:textSize">@dimen/live_view_icon_font_size_xlarge</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="SceneGuideTheme" parent="@android:style/Theme">
        <item name="android:windowAnimationStyle">@style/Animation.Activity</item>
    </style>
    <style name="SliderBarH" parent="@android:style/Widget.SeekBar">
        <item name="android:maxHeight">@dimen/sliderbarH_maxHeight</item>
        <item name="android:indeterminateDrawable">@drawable/sliderbar_horizontal</item>
        <item name="android:progressDrawable">@drawable/sliderbar_horizontal</item>
        <item name="android:minHeight">@dimen/sliderbarH_minHeight</item>
        <item name="android:thumb">@drawable/sliderbar_thumb</item>
        <item name="android:thumbOffset">@dimen/sliderbar_thumbOffset</item>
    </style>
    <style name="SliderBarH_exp" parent="@android:style/Widget.SeekBar">
        <item name="android:maxHeight">@dimen/sliderbarH_maxHeight</item>
        <item name="android:indeterminateDrawable">@drawable/sliderbar_horizontal</item>
        <item name="android:progressDrawable">@drawable/wtc_exp_seekbar_h</item>
        <item name="android:minHeight">@dimen/sliderbarH_minHeight</item>
        <item name="android:thumb">@drawable/sliderbar_thumb</item>
        <item name="android:thumbOffset">@dimen/sliderbar_thumbOffset</item>
    </style>
    <style name="SliderBarV" parent="@android:style/Widget.SeekBar">
        <item name="android:maxWidth">@dimen/sliderbarV_maxWidth</item>
        <item name="android:indeterminateDrawable">@drawable/sliderbar_vertical</item>
        <item name="android:progressDrawable">@drawable/sliderbar_vertical</item>
        <item name="android:minWidth">@dimen/sliderbarV_minWidth</item>
        <item name="android:thumb">@drawable/sliderbar_thumb</item>
        <item name="android:thumbOffset">@dimen/sliderbar_thumbOffset</item>
    </style>
    <style name="SliderBarV_exp" parent="@android:style/Widget.SeekBar">
        <item name="android:maxWidth">@dimen/sliderbarV_maxWidth</item>
        <item name="android:indeterminateDrawable">@drawable/sliderbar_vertical</item>
        <item name="android:progressDrawable">@drawable/wtc_exp_seekbar_v</item>
        <item name="android:minWidth">@dimen/sliderbarV_minWidth</item>
        <item name="android:thumb">@drawable/sliderbar_thumb</item>
        <item name="android:thumbOffset">@dimen/sliderbar_thumbOffset</item>
    </style>
    <style name="TransferSelectConditionHeaderStyle">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10.0dip</item>
        <item name="android:layout_marginTop">20.0dip</item>
        <item name="android:layout_marginRight">10.0dip</item>
    </style>
    <style name="TransferSelectConditionRadioStyle">
        <item name="android:textSize">22.0sp</item>
        <item name="android:gravity">center|left</item>
        <item name="android:padding">2.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10.0dip</item>
        <item name="android:layout_marginTop">2.0dip</item>
        <item name="android:layout_marginRight">10.0dip</item>
        <item name="android:layout_marginBottom">2.0dip</item>
        <item name="android:button">@null</item>
        <item name="android:minHeight">36.0dip</item>
        <item name="android:drawableRight">@android:drawable/btn_radio</item>
        <item name="android:drawablePadding">48.0dip</item>
    </style>
    <style name="TransferSelectMethodNoticeTextStyle">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10.0dip</item>
        <item name="android:layout_marginRight">10.0dip</item>
    </style>
    <style name="TransferSelectSectionDividerStyle">
        <item name="android:background">@android:color/darker_gray</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1.0dip</item>
        <item name="android:layout_marginLeft">10.0dip</item>
        <item name="android:layout_marginTop">12.0dip</item>
        <item name="android:layout_marginRight">10.0dip</item>
        <item name="android:layout_marginBottom">12.0dip</item>
    </style>
</resources>
